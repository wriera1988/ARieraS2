<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ARieraS2.vista3">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Semana 2:Elementos Visuales" HorizontalTextAlignment="Center" TextColor="White" FontSize="18"/>
            </Frame>


            <Entry x:Name="txtValorUno" Placeholder="Ingrese el Valor 1" Keyboard="Numeric"/>
            <Entry x:Name="txtValorDos" Placeholder="Ingrese el Valor 2" Keyboard="Numeric"/>
            <Entry x:Name="txtResultado" Placeholder="El resultado es" IsReadOnly="True"/>

            <Button x:Name="btnSumar" Text="Sumar" Clicked="btnSumar_Clicked_1"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>